{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*", "test.js"]
}
